# Consciousness OS - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Supabase (Cloud Database & Storage)
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# =============================================================================
# OpenAI (Whisper Transcription & GPT Analysis)
# =============================================================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# =============================================================================
# Anthropic (Claude AI Analysis)
# =============================================================================
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# =============================================================================
# Server Configuration
# =============================================================================
# Backend server settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# =============================================================================
# Session Storage
# =============================================================================
# Local directory for session files (default: ./sessions)
SESSIONS_DIR=./sessions

# Whether to upload sessions to Supabase
UPLOAD_TO_CLOUD=false

# =============================================================================
# Feature Flags
# =============================================================================
# Enable real-time AI analysis (uses more API calls)
REALTIME_AI_ANALYSIS=false

# Enable audio recording
ENABLE_AUDIO_RECORDING=false

# =============================================================================
# Debug Settings
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable verbose EEG logging (very noisy)
VERBOSE_EEG_LOGGING=false
